#!/bin/bash -login
#PBS -l nodes=1:ppn=32,walltime=4:00:00:00,mem=1009gb
#PBS -j oe

cd $PBS_O_WORKDIR

module load MIRA/3.9.18

workdir=mira-trimmed

mkdir -p ${workdir}

for file in *.trim.fq; do ln -s $PWD/${file} ${workdir}/${file%%.fq}.fastq; done

cd ${workdir}

mira -r ../lamprey-trimmed-mira.manifest
